pipeline {
    agent any
    parameters {
        choice(name: "MY_URL", choices: ['https://github.com/Ankit391kumar/jenkins_pipeline.git', 'https://github.com/Ankit391kumar/Jenkins-Zero-To-Hero.git'])
        choice(name: "SERVER", choices: ['test', 'preprod', 'prod'])
        string(name: 'GIT_CREDS', defaultValue: 'apps_github')
        string(name: 'CHECKOUT_BRANCH', defaultValue: 'main')
    }
    stages {
        stage ('CHECKOUT') {
            steps {
                // shell script
                sh"""
                   echo $GIT_CREDS
                   echo $CHECKOUT_BRANCH
                """
            }
        }
        stage ('stage2') { // groovy syntex
            steps {
                git url: "${params.MY_URL}",
                    server: "${params.SERVER}"
                    credintiolsID: "${params.GIT_CREDS}"
                    branch: "${params.CHECKOUT_BRANCH}"
            }
        }
    }
}