pipeline {
    agent any

    stages {
        stage ('CHECKOUT') {
            environment {
                APP_NAME = 'frontend'
                TARGET_ENV = 'test'
                GIT_URL = 'https://github.com/Ankit391kumar/jenkins_pipeline.git'
                CURRENT_BRANCH = 'main'
                GIT_CREDS = 'apps_github'

            }
            steps {
                // Groovy syntex
                git url: "${env.GIT_URL}",
                    branch: "${env.CURRENT_BRANCH}",
                    credentialsId: "${env.GIT_CREDS}"
            }
        }
        stage ('shell_suntex') {
            steps {
                sh '''
                   echo $GIT_URL
                   echo $CURRENT_BRANCH
                   echo $GIT_CREDS
                '''

            }
        }
            
    }
}